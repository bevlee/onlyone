# OnlyOne Environment Configuration
# Copy this file to .env and modify as needed

# ======================
# ENVIRONMENT SETTINGS
# ======================
ENVIRONMENT=development
NODE_ENV=${ENVIRONMENT}

# ======================
# SERVER SETTINGS
# ======================
SERVER_NAME=localhost
GAMESERVER_PORT=3000
CLIENT_PORT=802

# Port configuration
PUBLIC_DEVELOPMENT_GAMESERVER_URL=http://${SERVER_NAME}:${GAMESERVER_PORT}

# ======================
# NGINX CONFIGURATION
# ======================

GAMESERVER_HOST=gameserver # Gameserver host
GAMESERVER_URL=http://${GAMESERVER_HOST}:${GAMESERVER_PORT}  # Frontend gameserver URL
CORS_ORIGIN=http://${SERVER_NAME}:${CLIENT_PORT}

# Static files root (used by nginx container)
STATIC_ROOT=/usr/share/nginx/html