{
  "family": "onlyone",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "gameserver",
      "image": "bevdev1/onlyone-gameserver",
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "SERVER_NAME",
          "value": "https://onlyone.bevsoft.com"
        },
        {
          "name": "CLIENT_PORT",
          "value": "80"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "bevdev1/onlyone-nginx",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "SERVER_NAME",
          "value": "onlyone.bevsoft.com"
        },
        {
          "name": "GAMESERVER_PORT",
          "value": "3000"
        },
        {
          "name": "STATIC_ROOT",
          "value": "/usr/share/nginx/html"
        }
      ]
    }
  ]
}
